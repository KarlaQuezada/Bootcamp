<%- include ('../partials/header');%>
    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit Comment </h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT " method="POST" class="d-grid gap-2">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
